<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_gray"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_marginBottom="@dimen/card_separation">

        <LinearLayout
            android:id="@+id/trip_card_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/trip_state_width"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/trip_state_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/trip_state_content_destription"
                    android:src="@drawable/baseline_directions_bus_black_36" />

                <TextView
                    android:id="@+id/trip_state_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Procesado"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/trip_card_icon_and_text_separation">

                <TextView
                    android:id="@+id/trip_origin_destination_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mercedes - Capital Federal"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/trip_date_hour_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lunes 02/05/22 - 16hs"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>