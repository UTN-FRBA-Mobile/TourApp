<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.ConfirmTripFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/trip_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <!-- TODO Ver si no lo sacamos afuera en otro fragment (no seria necesario por el momento)-->

            <TextView
                android:id="@+id/description_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/from_colon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_origin"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:text="@string/to_colon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_destination"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:text="@string/departure_date_colon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_date"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:text="@string/departure_hour_colon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_origin_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_time"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:text="@string/departure_stop"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_destination_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_origin_stop"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:text="@string/arrival_stop_colon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/description_number_of_passengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_destination_stop"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:text="@string/number_of_tickets_colon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/value_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/description_origin"
                android:layout_alignTop="@id/description_origin"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/description_origin"
                android:ems="10"
                android:text="Mercedes"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


            <TextView
                android:id="@+id/value_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/description_destination"
                android:layout_alignTop="@id/description_destination"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/description_destination"
                android:ems="10"
                android:text="Capital Federal "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/value_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/description_date"
                android:layout_alignTop="@id/description_date"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/description_date"
                android:ems="10"
                android:text="15-05-2022"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/value_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/description_time"
                android:layout_alignTop="@id/description_time"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/description_time"
                android:ems="10"
                android:text="16:00 Hs"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/value_origin_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/description_origin_stop"
                android:layout_alignTop="@id/description_origin_stop"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/description_origin_stop"
                android:ems="10"
                android:text="Hotel Mercedes"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/value_destination_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/description_destination_stop"
                android:layout_alignTop="@id/description_destination_stop"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/description_destination_stop"
                android:ems="10"
                android:text="9 de Julio y Venezuela"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/value_number_of_passengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/description_number_of_passengers"
                android:layout_alignTop="@id/description_number_of_passengers"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/description_number_of_passengers"
                android:ems="10"
                android:text="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/trip_passengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <!-- TODO Hay que sacar esto en otro frame para armarlo dinamicamente -->

            <TextView
                android:id="@+id/passengerDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:text="Pasajero 1: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/passengerValue"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/passengerDescription"
                android:layout_alignTop="@id/passengerDescription"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/passengerDescription"
                android:ems="10"
                android:text="Jose Machado - 20.444.222"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/passengerDescription2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/passengerDescription"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="2dp"
                android:text="Pasajero 2: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/passengerValue2"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/passengerDescription2"
                android:layout_alignTop="@id/passengerDescription2"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/passengerDescription2"
                android:ems="10"
                android:text="Juan Lopez - 25.444.222"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/trip_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/description_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:text="@string/price_colon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/value_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/description_import"
                android:layout_alignTop="@id/description_import"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/description_import"
                android:ems="10"
                android:text="1.500"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </RelativeLayout>

        <TextView
            android:id="@+id/legal_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="@string/reference_payment" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bank_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:hint="@string/bank">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/bank_name"
                android:textColor="#000000" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bank_cbu"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:hint="@string/cbu"
            app:endIconContentDescription="@string/calendar_icon_description"
            app:endIconDrawable="@drawable/ic_copy"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="@string/cbu_number"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bank_alias"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:hint="@string/alias_colon"
            app:endIconContentDescription="@string/calendar_icon_description"
            app:endIconDrawable="@drawable/ic_copy"
            app:endIconMode="custom">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="tour.app"
                android:textColor="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/upload_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:text="@string/payment_information" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bank_upload_receipt"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:hint="@string/upload_receipt"
            app:endIconContentDescription="@string/calendar_icon_description"
            app:endIconDrawable="@drawable/ic_upload"
            app:endIconMode="custom">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="@string/confirm" />
    </LinearLayout>

</ScrollView>