<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_gray"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_marginBottom="@dimen/card_separation">

        <LinearLayout
            android:id="@+id/trip_card_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/trip_card_icon_and_text_separation">

                <TextView
                    android:id="@+id/trip_id_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Viaje 105485"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/trip_destination_hour_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mercedes - Capital Federal - 16hs"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>